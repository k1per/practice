<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN"
        "http://struts.apache.org/dtds/tiles-config_1_3.dtd">

<tiles-definitions>
    <definition name="welcome" path="/views/welcome.jsp">
        <put name="head" value="/views/header.jsp"/>
        <put name="menu" value="/views/menu.jsp"/>
        <put name="body" value="/views/body.jsp"/>
        <put name="footer" value="/views/footer.jsp"/>
    </definition>

    <definition name="add" extends="welcome">
        <put name="body" value="/views/adduser.jsp"/>
    </definition>
    <definition name="search" extends="welcome">
        <put name="body" value="/views/search.jsp"/>
    </definition>
    <definition name="contacts" extends="welcome">
        <put name="body" value="/views/contacts.jsp"/>
    </definition>
    <definition name="success" extends="welcome">
        <put name="body" value="/views/success.jsp"/>
    </definition>
    <definition name="failure" extends="welcome">
        <put name="body" value="/views/failure.jsp"/>
    </definition>

    <definition name="successadduser" extends="welcome">
        <put name="body" value="/views/successadduser.jsp"/>
    </definition>
</tiles-definitions>